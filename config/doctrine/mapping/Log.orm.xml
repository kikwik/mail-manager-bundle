<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <mapped-superclass name="Kikwik\MailManagerBundle\Model\Log">
        <field name="sender" type="string" nullable="true" />
        <field name="recipient" type="text" nullable="true" />
        <field name="carbonCopy" type="text" nullable="true" />
        <field name="blindCarbonCopy" type="text" nullable="true" />
        <field name="replyTo" type="string" nullable="true" />
        <field name="templateName" type="string" nullable="true" />
        <field name="subject" type="string" />
        <field name="serializedEmail" type="text" />
        <field name="status" type="string" />
        <field name="sendedAt" type="datetime_immutable" nullable="true" />
    </mapped-superclass>
</doctrine-mapping>
